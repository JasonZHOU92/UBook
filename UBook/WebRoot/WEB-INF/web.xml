	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShowCreditCardServlet</servlet-name>
		<url-pattern>/private/servlet/ShowCreditCardServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddCreditCardServlet</servlet-name>
		<url-pattern>/private/servlet/AddCreditCardServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ConfirmUserOrderServlet</servlet-name>
		<url-pattern>/private/servlet/ConfirmUserOrderServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShowLoginServlet</servlet-name>
