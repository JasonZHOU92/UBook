@model SalesManagementSystem.Models.Category

@{
    ViewBag.Title = "创建新商品种类";
}

<h2>商品类型信息</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "form has-validation" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Category</legend>

        <div class="clearfix">

               @Html.LabelFor((model => model.CategoryName), new { @class = "form-label no-description" }, true)

               <div class="form-input">@Html.EditorFor(model => model.CategoryName)</div>

         </div>

         <div class="clearfix">

               @Html.LabelFor((model => model.Description), new { @class = "form-label no-description" })

               <div class="form-input">@Html.EditorFor(model => model.Description)</div>

         </div>

         <div class="form-action clearfix">

                <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">创建</button>

                <button class="button" type="reset">重置</button>
                 <input type="button" value = "返回上一页" onClick="location.href='javascript:history.go(-1);'"/>
    
         </div>
    </fieldset>
}
