@model SalesManagementSystem.Models.Region

@{
    ViewBag.Title = "片区";
}

<div class="portlet grid_12">
        <header>
            <h2>片区信息</h2>
        </header>
<section>
         
        @using (Html.BeginForm("Edit", "Region", FormMethod.Post, new { @class = "form has-validation" }))
        {
            @Html.ValidationSummary(true) 
             
                @Html.HiddenFor(model => model.RegionID)

                <div class="clearfix">
                    @Html.LabelFor((model => model.RegionName), new { @class = "form-label no-description" }, false)
                    <div class="form-input" >@Html.EditorFor(model => model.RegionName)</div>
                </div>    
                <div class="clearfix">
                    @Html.LabelFor((model => model.Address), new { @class = "form-label no-description" }, false)
                    <div class="form-input" >@Html.EditorFor(model => model.Address)</div>
                </div>
                <div class="form-action clearfix">
                        <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">保存</button>
                </div>
            
                <div class="form-action clearfix">
        <input type="button" value = "返回上一页" onClick="location.href='javascript:history.go(-1);'"/>
    </div>
        }

</section>
</div>




