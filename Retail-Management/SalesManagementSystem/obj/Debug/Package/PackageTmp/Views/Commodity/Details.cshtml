

@model SalesManagementSystem.Models.Commodity

@{
    ViewBag.Title = "商品详细信息";
}
                    <div class="portlet grid_12">
                        <header>
                            <h2>商品信息</h2>
                        </header>
                        <section>
@using (Html.BeginForm("Details", "Commodity", FormMethod.Post, new { @class = "form has-validation" }))
{
    @Html.ValidationSummary(true)

                                <div class="clearfix">

                                    @Html.LabelFor((model => model.CommodityName), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.DisplayFor(model => model.CommodityName)</div>

                                </div>
                                 <div class="clearfix">

                                    @Html.LabelFor((model => model.Price), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.DisplayFor(model => model.Price)</div>

                                </div>
                               <div class="clearfix">

                                    @Html.LabelFor((model => model.Description), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.DisplayFor(model => model.Description)</div>

                                </div>
                                <div class="clearfix">

                                    @Html.LabelFor((model => model.Category), new { @class = "form-label no-description" })

                                    <div class="form-input">
                                     @Html.DisplayFor(model => model.Category.CategoryName)
                                      </div>
     <div class="form-action clearfix">
        <input type="button" value = "返回上一页" onClick="location.href='javascript:history.go(-1);'"/>
    </div>
                                </div>

}
                        </section>
                    </div>