@model SalesManagementSystem.Models.Commodity

@{
    ViewBag.Title = "创建新商品";
}
                    <div class="portlet grid_12">
                        <header>
                            <h2>商品信息</h2>
                        </header>
                        <section>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Commodity", FormMethod.Post, new { @class = "form has-validation" }))
{
    @Html.ValidationSummary(true)

                                <div class="clearfix">

                                    @Html.LabelFor((model => model.CommodityName), new { @class = "form-label no-description" }, true)

                                    <div class="form-input">@Html.EditorFor(model => model.CommodityName)</div>

                                </div>
                                 <div class="clearfix">

                                    @Html.LabelFor((model => model.Price), new { @class = "form-label no-description" }, true)

                                    <div class="form-input">@Html.EditorFor(model => model.Price)</div>

                                </div>
                               <div class="clearfix">

                                    @Html.LabelFor((model => model.Description), new { @class = "form-label no-description" }, true)

                                    <div class="form-input">@Html.EditorFor(model => model.Description)</div>

                                </div>
                                <div class="clearfix">

                                    @Html.LabelFor((model => model.Category), new { @class = "form-label no-description" }, true)

                                    <div class="form-input">
                                     @Html.DropDownList("CategoryID", string.Empty)
                                     @Html.ValidationMessageFor(model => model.CategoryID)
                                     </div>

                                </div>

                                <div class="form-action clearfix">

                                    <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">创建</button>

                                    <button class="button" type="reset">重置</button>

                                </div>

}
                        </section>
                    </div>