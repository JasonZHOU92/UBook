@model SalesManagementSystem.Models.Store
@{
    ViewBag.Title = "添加检查员";
}
                    <div class="portlet grid_12">
                        <header>
                            <h2>检查员</h2>
                        </header>
                        <section>
                        @if (ViewData["Statue"] != null)
                      {
    
                         @Html.Label("添加成功，返回？")
                         <br />
                         @Html.ActionLink("返回", "Index") 
    
                      }

@using (Html.BeginForm("AddInspectors", "Store", FormMethod.Post, new { @class = "form has-validation" }))
{
               @Html.ValidationSummary(true)

                                <div class="clearfix">

                                    @Html.LabelFor((model => model.StoreName), new { @class = "form-label no-description" }, true)

                                    <div class="form-input">@Html.EditorFor(model => model.StoreName)</div>

                                </div>
                               <div class="clearfix">

                                    @Html.LabelFor((model => model.Inspectors), new { @class = "form-label no-description" })

                                    <div class="form-input">
                                     @Html.DropDownList("User_UserID", string.Empty)
                                      @Html.ValidationMessageFor(model => model.Inspectors)
                                     </div>

                                </div>
                                   
                                 <div class="form-action clearfix">

                                    <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">创建</button>

                                      @Html.ActionLink("取消", "Index")

                                </div> }
                        </section>
                    </div>