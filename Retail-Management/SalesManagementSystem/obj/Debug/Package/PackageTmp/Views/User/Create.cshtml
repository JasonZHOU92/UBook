@model SalesManagementSystem.Models.User

@{
    ViewBag.Title = "创建新用户";
}
                    

<div class="portlet grid_12">
        <header>
            <h2>用户信息</h2>
        </header>
        <section>
        @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @id="myform", @class = "form has-validation" }))
        {
            @Html.ValidationSummary(true)
                <div class="clearfix">
                    @Html.LabelFor((model => model.UserName), new { @class = "form-label no-description" }, false)
                    <div class="form-input">@Html.EditorFor(model => model.UserName)</div>
                </div>
                    
                <div class="clearfix">
                    @Html.LabelFor((model => model.LastName), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.LastName)</div>
                </div>
            
                <div class="clearfix">
                    @Html.LabelFor((model => model.FirstName), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.FirstName)</div>
                </div>
                     
                <div class="clearfix">
                    @Html.LabelFor((model => model.Email), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.Email)</div>
                </div>
            
                <div class="clearfix">
                    @Html.LabelFor((model => model.Tel), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.Tel)</div>
                </div>
            
                 <div class="clearfix">
                    @Html.LabelFor((model => model.Password), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.PasswordFor(model => model.Password)</div>
                </div>
            
                <div class="clearfix">
                     <label class="form-label no-description" for="Roles">角色<em>*</em></label>
                       <div class="form-input">
                        <label><input  id="roles1" name="Roles" type="checkbox" value="1" /> 系统管理员</label>
                        <label><input  id="roles3" name="Roles" type="checkbox" value="3" /> 产品管理员</label>
                        <label><input  id="roles5" name="Roles" type="checkbox" value="5" /> 评审条目管理员</label>     
                        <label><input  id="roles7" name="Roles" type="checkbox" value="7" /> 销售员</label>                       
                      <br/>

                        <label><input  id="roles2" name="Roles" type="checkbox" value="2" /> 员工管理员</label>
                        <label><input  id="roles6" name="Roles" type="checkbox" value="6" /> 业务评审员</label>
                        <label><input  id="roles4" name="Roles" type="checkbox" value="4" /> 销售点管理员</label>
                       </div>
                </div>
                <div class="form-action clearfix">
                    <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">创建</button>
                    <button class="button" type="reset">重置</button>
                </div>
            
               

        }
        </section>
</div>




