@model SalesManagementSystem.Models.User

@{
    ViewBag.Title = "修改用户信息";
}

<div class="portlet grid_12">
        <header>
            <h2>用户信息</h2>
        </header>

        <section>
         
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "form has-validation" }))
        {
            @Html.ValidationSummary(true)

                 @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.UserID)
                <div class="clearfix">
                    @Html.LabelFor((model => model.UserName), new { @class = "form-label no-description" }, false)
                    <div class="form-input" >@Html.EditorFor(model => model.UserName)</div>
                </div>
                    
                <div class="clearfix">
                    @Html.LabelFor((model => model.LastName), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.LastName)</div>
                </div>
            
                <div class="clearfix">
                    @Html.LabelFor((model => model.FirstName), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.FirstName)</div>
                </div>
                     
                <div class="clearfix">
                    @Html.LabelFor((model => model.Email), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.Email)</div>
                </div>
            
                <div class="clearfix">
                    @Html.LabelFor((model => model.Tel), new { @class = "form-label no-description" }, true)
                    <div class="form-input">@Html.EditorFor(model => model.Tel)</div>
                </div>
            
                <div class="clearfix">
                     <label class="form-label no-description" for="Roles">角色</label>
                       <div class="form-input">
                        <label><input  id="roles1" @ViewBag.CheckedList[1] name="Roles" type="checkbox" value="1" /> 系统管理员</label>
                        <label><input  id="roles3" @ViewBag.CheckedList[3] name="Roles" type="checkbox" value="3" /> 产品管理员</label>
                        <label><input  id="roles5" @ViewBag.CheckedList[5] name="Roles" type="checkbox" value="5" /> 评审条目管理员</label>     
                        <label><input  id="roles7" @ViewBag.CheckedList[7] name="Roles" type="checkbox" value="7" /> 销售员</label>                   
                      <br/>

                        <label><input  id="roles2" @ViewBag.CheckedList[2] name="Roles" type="checkbox" value="2" /> 员工管理员</label>
                        <label><input  id="roles6" @ViewBag.CheckedList[6] name="Roles" type="checkbox" value="6" /> 业务评审员</label>
                        <label><input  id="roles4" @ViewBag.CheckedList[4] name="Roles" type="checkbox" value="4" /> 销售点管理员</label>
                       </div>
                </div>
                <div class="form-action clearfix">
                        <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">保存</button>

        <input type="button" value = "返回上一页" onClick="location.href='javascript:history.go(-1);'"/>

                </div>
        }

</section>
</div>
