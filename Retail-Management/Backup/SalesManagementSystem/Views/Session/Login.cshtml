<!-- STYLESHEETS -->

<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/reset.css")" />
<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/grids.css")" />
<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/style.css")" />
<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/forms.css")" />
<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/jquery.uniform.css")" />
<link rel="stylesheet" media="screen" href="@Url.Content("~/Content/css/themes/lightblue/style.css")" />

