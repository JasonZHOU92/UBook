@model SalesManagementSystem.ViewModels.ChangePassword

@{
    ViewBag.Title = "修改用户密码";
}


<div class="portlet grid_12">
        <header>
            <h2>用户信息</h2>
        </header>
        <section>
@using (Html.BeginForm("ChangePassword", "User", FormMethod.Post, new { @class = "form has-validation" }))
{
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
            <div class="clearfix">
                 <div class="editor-label">
                    @Html.HiddenFor(model => model.UserID)
                 </div>
             </div>
                <div class="clearfix">
                    <label class="form-label no-description" for="UserName">用户名</label>
                    <div class="form-input" ><label for="ohehe001">@ViewBag.UserName</label></div>
                </div>
            <div class="clearfix">
             @Html.LabelFor((model => model.NewPassword), new { @class = "form-label no-description" }, true)
             <div class="form-input"><input id="NewPassword" name="NewPassword" type="password" required="required" data-val-required="新密码 字段是必需的。"/></div>
            </div>
             <div class="clearfix">
             @Html.LabelFor((model => model.ConfirmPassword), new { @class = "form-label no-description" }, true)
             <div class="form-input"><input id="ConfirmPassword" name="ConfirmPassword" type="password" required="required" data-val-required="确认密码 字段是必需的。" data-equals="NewPassword" data-val-dataequals="确认密码 必需与 新密码 相同。"/></div>
            </div>
             <div class="form-action clearfix">
                 <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">修改密码</button>
            </div>
}
 </section>
</div>