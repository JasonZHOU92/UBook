@model SalesManagementSystem.Models.Commodity

@{
    ViewBag.Title = "修改商品信息";
}
                    <div class="portlet grid_12">
                        <header>
                            <h2>商品信息</h2>
                        </header>
                        <section>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Edit", "Commodity", FormMethod.Post, new { @class = "form has-validation" }))
{
    @Html.ValidationSummary(true)
    @Html.Hidden("CommodityID", (Model == null ? "" : Model.CommodityID.ToString()))
                                <div class="clearfix">

                                    @Html.LabelFor((model => model.CommodityName), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.EditorFor(model => model.CommodityName)</div>

                                </div>
                                 <div class="clearfix">

                                    @Html.LabelFor((model => model.Price), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.EditorFor(model => model.Price)</div>

                                </div>
                               <div class="clearfix">

                                    @Html.LabelFor((model => model.Description), new { @class = "form-label no-description" })

                                    <div class="form-input">@Html.EditorFor(model => model.Description)</div>

                                </div>
                                <div class="clearfix">

                                    @Html.LabelFor((model => model.Category), new { @class = "form-label no-description" })

                                    <div class="form-input">
                                     @Html.DropDownList("CategoryID", string.Empty)
                                      @Html.ValidationMessageFor(model => model.Category.CategoryID)
                                     </div>

                                </div>

                                <div class="form-action clearfix">
        <input type="button" value = "返回上一页" onClick="location.href='javascript:history.go(-1);'"/>
                                    <button class="button" type="submit" data-icon-primary="ui-icon-circle-check">修改</button>
                                </div>
}
                        </section>
                    </div>

























